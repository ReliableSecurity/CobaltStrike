# Test popup menu for CrossC2 SSH beacons
# Load this first to test if popup ssh menu works

popup ssh {
    separator();
    menu "&TEST: CrossC2 Menu" {
        item "&Hello AKUMA" {
            binput($1, "# Test command from AKUMA script");
            blog($1, "üî• HELLO from AKUMA CrossC2 Test Script!");
            bshell($1, "echo 'AKUMA CrossC2 menu test successful!'");
            bshell($1, "whoami && hostname");
        }
        item "&Show Beacon Info" {
            binput($1, "# Beacon information test");
            blog($1, "üìä Testing beacon interaction...");
            bshell($1, "echo 'Beacon ID: ' $1");
            bshell($1, "echo 'Current user: ' $(whoami)");
            bshell($1, "echo 'Current directory: ' $(pwd)");
            bshell($1, "echo 'System info: ' $(uname -a | cut -d' ' -f1,3)");
        }
        item "&Network Test" {
            binput($1, "# Network connectivity test");
            blog($1, "üåê Network connectivity test...");
            bshell($1, "ping -c 2 8.8.8.8 && echo 'Internet: OK' || echo 'Internet: FAILED'");
            bshell($1, "ip addr show | grep inet | head -5");
        }
    }
}

blog("üß™ AKUMA CrossC2 Test Menu Loaded! Right-click on SSH beacon to see 'TEST: CrossC2 Menu'");
